<header><h1><%= title %></h1></header>
<div class= "box-3">
<%= render partial: "partials/error_messages", locals: { model: user } %>

<%= form_for user do |f| %>

  <%= f.label :user_name %> <br>
  <%= f.text_field :user_name %> <br><br>

  <%= f.label :password %> <br>
  <%= f.text_field :password %> <br><br>

  <%= f.label :bio %> <br>
  <%= f.text_field :bio %> <br><br>

  <%= f.submit %>
<% end %>


<% if title == "Edit Your Info"%>
  <%= button_to  "Destory User", user_path(user), method: :delete %>
<% end %>

</div>

